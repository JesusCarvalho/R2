.col-md-12
  %section.widget
    %legend.section
      %h1 File Upload
    = simple_form_for :multimedia do |mm|
      .row
        .col-md-12
          %form#fileupload{action: "server/php", enctype: "multipart/form-data", method: "POST"}
            #dropzone.dropzone
              Drop files here
              %i.fa.fa-download-alt.pull-right
      .row
        .col-md-12.fileupload-progress.fade
          / The global progress bar
          .progress.progress-success.progress-striped.active{"aria-valuemax" => "100", "aria-valuemin" => "0", role: "progressbar"}
            .bar{style: "width:0%;"}
          / The extended global progress information
          .progress-extended Â 
      .form-actions.fileupload-buttonbar.no-margin
        %span.btn.btn-sm.btn-default.fileinput-button
          %i.fa.fa-plus
          %span Add files...
          %input{multiple: "multiple", name: "files[]", type: "file"}/
        %button.btn.btn-primary.btn-sm.start{type: "submit"}
          %i.fa.fa-upload
          %span Start upload
        %button.btn.btn-inverse.btn-sm.cancel{type: "reset"}
          %i.fa.fa-ban
          %span Cancel upload
      .fileupload-loading
        %i.fa.fa-spin.fa-spinner
      / The table listing the files available for upload/download
      %table.table.table-striped{role: "presentation"}
        %tbody.files{"data-target" => "#modal-gallery", "data-toggle" => "modal-gallery"}