.col-sm-offset-2
  %section.widget
    %legend.section
      %h3 Header
    = simple_form_for :header do |f|
      .row
        = f.input :pbso_case_num,:label => false, input_html: {class:'input-transparent', placeholder:'Case #'}, wrapper_html:{class:'col-md-4'}
        = f.input :unit,:collection => TrifoldEnums::Unit.unit_codes,:label => false ,:include_blank => 'Unit', input_html: { class: 'input-transparent btn-default' }, wrapper_html:{class:'col-md-4'}
        = f.input :date_reported, :label=>false, input_html: { class:'input-transparent', id: 'date_reported', placeholder:'Date Reported:' }, wrapper_html:{class:'col-md-4'}
        = f.input :occurred_from, :label=>false, input_html: { class:'input-transparent date', id: 'occurred_from', placeholder:'Occurred From:'}, wrapper_html:{class:'col-md-4'}
        = f.input :occurred_to,   :label=>false, input_html: { class:'input-transparent',   placeholder:'Occurred To:', id:'occurred_to'}, wrapper_html:{class:'col-md-4'}
        = f.input :zone, :label => false, input_html: {class:'input-transparent', placeholder:'Zone'}, wrapper_html:{class:'col-md-4'}
        = f.input :ds_id,:label => false, input_html: {class:'input-transparent', placeholder:'D/S ID#'}, wrapper_html:{class:'col-md-4'}
        = f.input :disposition,:collection => TrifoldEnums::Disposition.disposition_codes,:label => false ,:include_blank => 'Disposition', input_html: { class: 'input-transparent btn-default' }, wrapper_html:{class:'col-md-4'}
        = f.input :juvenile_arrest,:label=>false,as: :boolean, input_html: {class:'input-transparent radio iCheck',id:'isJuvenile', placeholder:'Zone'}, wrapper_html: {class:'fotm-inline col-xs-2'}
        %label.checkbox.col-md-4 Juvenile Arrested?
        = f.input :number_arrested,:label => false, input_html: {class:'input-transparent', placeholder:'# Arrested'}, wrapper_html:{class:'col-md-4'}
        = f.input :incident_location_address,:label => false, input_html: {class:'input-transparent', placeholder:'Incident Location Address'}, wrapper_html:{class:'col-md-4'}
        = f.input :apartment_number,:label => false, input_html: {class:'input-transparent', placeholder:'Apt #'}, wrapper_html:{class:'col-md-4'}

<script type="text/javascript">
