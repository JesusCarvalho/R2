.col-sm-offset-2
  %section.widget
    %legend.section
      %h3 URLs
    = simple_form_for :url do |u|
      .row
        = u.input :description, as: :text, :label => false,
            input_html: {class:'input-transparent','data-toggle'=>'tooltip', 'data-placement'=>'top', 'title'=>'Description of Link', placeholder:'Description of Link  (ex: significance to offense list)', 'rows'=>4},
            wrapper_html:{class:'col-xs-5'}
        = u.input :link,as: :text,:label => false,
            input_html: {class:'input-transparent','data-toggle'=>'tooltip', 'data-placement'=>'top', 'title'=>'Link', placeholder:'Link', 'rows'=>4},
            wrapper_html:{class:'col-xs-7'}